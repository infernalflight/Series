<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Series !{% endblock %}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&family=Sedgwick+Ave+Display&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <link rel="icon" href="{{ asset('img/icon.png') }}">

</head>
<body>
<div class="container">
    <header>
        <a href="{{ path('home') }}">
            <img src="{{ asset("img/logo.svg") }}" alt="Series !">
        </a>
        <nav>
            <ul>
                <li><a href="{{ path("home") }}" title="Home">Home</a></li>
                <li><a href="{{ path("serie_list") }}" title="All series">Series</a></li>
                <li><a href="{{ path("serie_create") }}" title="Create a new serie">Create</a></li>
            </ul>
        </nav>
    </header>
    <main>
        {% block body %}{% endblock %}
    </main>

    <footer>

    </footer>
</div>
{% block extraStyles %} {% endblock %}
{% block extraJs %} {% endblock %}
</body>
</html>