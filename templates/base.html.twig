<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Series !{% endblock %}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&family=Sedgwick+Ave+Display&display=swap"
          rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <link rel="icon" href="{{ asset('img/icon.png') }}">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

</head>
<body>
<div class="container">
    <header>
        <a href="{{ path('home') }}">
            <img src="{{ asset("img/logo.svg") }}" alt="Series !">
        </a>
        <nav>
            <ul>
                <li><a href="{{ path("home") }}" title="Home">Home</a></li>
                <li><a href="{{ path("serie_list") }}" title="All series">Series</a></li>
                <li><a href="{{ path("serie_create") }}" title="Create a new serie">Create</a></li>
            </ul>
        </nav>
    </header>
    <main>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}"> {{ message }} </div>
            {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
    </main>

    <footer>

    </footer>
</div>
{% block extraStyles %} {% endblock %}
{% block extraJs %} {% endblock %}
</body>
</html>