{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Liste{% endblock %}

{% block body %}
    <h2>Liste de series</h2>
    <section class="series-list">
        {% for serie in series %}
            <article>
                <a href="{{ path('serie_show', {'id': serie.id }) }}">
                    <img src="{{ asset("uploads/posters/series/" ~ serie.poster) }}" alt="{{ serie.name }}" title="{{ serie.name }}">
                </a>
            </article>
        {% endfor %}
    </section>
{% endblock %}
